<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.typinggame.ScoreScreenController" spacing="20" style="-fx-background-color: orange;">
    <Text fx:id="messageText" style="-fx-font-size: 24px;"/>
    <Text strokeType="OUTSIDE" strokeWidth="0.0" fx:id="scoreText" style="-fx-font-size: 18px;" />
    <Button fx:id="restartButton" onAction="#restartGame" prefWidth="130" text="Restart" />
</VBox>